    "@vitest/coverage-v8": "3.2.3",
    "eslint": "^9.18.0",
    "eslint-plugin-storybook": "^9.0.9",
    "eslint-plugin-svelte": "^3.0.0",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "storybook": "^9.0.9",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "typescript-functional-extensions": "^3.0.0",
    "uuid": "^11.1.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "daisyui": "^5.0.43"
